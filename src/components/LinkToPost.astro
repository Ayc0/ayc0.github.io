---
import { LinkCard } from "@astrojs/starlight/components";
import { getEntry } from "astro:content";

export interface Props {
  slug: string;
  includeDate?: boolean;
}

const { slug, includeDate } = Astro.props;

const entry = await getEntry(
  "docs",
  slug.startsWith("posts/") ? slug : "posts/" + slug,
);
if (entry == null) {
  throw new Error(`slug ${slug} isnâ€™t valid`);
}

let description: undefined | string;
if (includeDate && entry.data.lastUpdated) {
  // TODO: rework
  description =
    "Last updated " +
    new Date(entry.data.lastUpdated).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    });
}
---

<LinkCard
  href={import.meta.env.BASE_URL + entry.slug}
  title={entry.data.title}
  description={description}
/>
