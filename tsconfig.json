{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "useDefineForClassFields": false, // For Lit, https://lit.dev/docs/components/properties/#avoiding-issues-with-class-fields

    // For easier imports
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}
